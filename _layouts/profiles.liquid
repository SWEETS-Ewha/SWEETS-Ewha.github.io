---
layout: page
---
<div class="post">
  <article>
    {% if page.profiles %}
      {% assign profiles_by_category = page.profiles | group_by: 'category' %}
      {% for category in profiles_by_category %}
        <h2 class="profile-group-title">{{ category.name }}</h2>
        <div class="profile-group-container">
          {% for profile in category.items %}
            <div class="profile-people">
              {% if profile.image %}
                {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
                {% if profile.image_circular %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
                {% else %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
                {% endif %}
                {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
                {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
              {% endif %}
              {% if profile.content %}
                {% assign content_file = profile.content | remove: '.md' %}
                {% assign person = site.people | where: 'slug', content_file | first %}
                {% if person %}
                  {{ person.content }}
                {% endif %}
              {% else %}
                {{ content }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
        <hr>
      {% endfor %}
    {% endif %}
  </article>
</div>
